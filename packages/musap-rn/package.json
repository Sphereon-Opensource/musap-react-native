  "types": "dist/typescript/index.d.ts",
  "nativePackage": true,
  "files": [
    "src",
    "dist",
    "android",
    "ios",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "yarn build",
    "assemble:android:windows": "cd android && .\\gradlew.bat assembleDebug",
    "assemble:android:linux": "cd android && ./gradlew assembleDebug",
    "assemble:ios": "cd ios && xcodebuild -scheme MusapRn -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 12' build",
    "build:android:windows": "cd android && .\\gradlew.bat bundleReleaseAar",
    "build:android:linux": "cd android && ./gradlew bundleReleaseAar",
    "build:ios": "cd ios && xcodebuild -scheme MusapRn -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 12' build"
  },
