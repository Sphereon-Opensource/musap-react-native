{
  "name": "@sphereon/musapRnKmsTesterApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "dependencies": {
    "@react-native-community/cli-platform-android": "^13.6.9",
    "@sphereon/musap-react-native": "0.0.1-unstable.111",
    "react": "18.2.0",
    "react-native": "0.74.3",
    "react-native-get-random-values": "^1.11.0",
    "react-native-uuid": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.8",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.24.7",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.74.85",
    "@react-native/eslint-config": "0.74.85",
    "@react-native/metro-config": "0.74.85",
    "@react-native/typescript-config": "0.74.85",
    "@testing-library/jest-native": "^5.4.3",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.6",
    "@types/react-native-get-random-values": "^1.8.2",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "detox": "^21.0.0-rc.11",
    "eslint": "^8.19.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.2.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.3.1",
  "detox": {
    "apps": {
      "myApp.android": {
        "type": "android.apk",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && gradlew.bat assembleDebug assembleAndroidTest -DtestBuildType=debug && cd .."
      }
    },
    "devices": {
      "attachedDevice": {
        "type": "android.attached",
        "device": {
          "adbName": "ZY22J2279M"
        }
      }
    },
    "configurations": {
      "android.device.debug": {
        "device": "attachedDevice",
        "app": "myApp.android"
      }
    }
  }
}
